{
  "name": "heck-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "heck-app",
      "heck-core"
    ],
    "nohoist": [
      "**/electron",
      "**/electron/**",
      "**/jest",
      "**/jest/**"
    ]
  },
  "scripts": {
    "build": "tsc --build",
    "dev:app": "yarn workspace heck-app dev",
    "dev:core": "yarn workspace heck-core watch"
  },
  "devDependencies": {
    "typescript": "^3.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "tslint-sonarts": "^1.8.0"
  }
}
